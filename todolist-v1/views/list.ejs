<%- include("header") -%>
 
 <div class="box" id="heading">
    <h1>
      <%= listTitle %>
    </h1>
  </div>

  <div class="box">
    <% for (let i=0; i < newListItem.length; i++) { %>
    <div class="item">
      <input type="checkbox">
      
        <p>
          <%= newListItem[i] %>
        </p>
        
    </div>
    <% } %>

    <form action="/" method="post" class="item">
      <input type="text" name="newItem" class="form-control mb-3" placeholder="New Item" autocomplete="off">
  
      <button type="submit" name="list" class="btn btn-primary" value=<%= listTitle %>>+</button>
    </form>
  </div>

  <%- include("footer") -%>